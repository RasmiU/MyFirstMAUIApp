<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MyFirstApp.WelcomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="WelcomePage"
    Shell.NavBarIsVisible="False">
    <ContentPage.Background>
        <LinearGradientBrush EndPoint="1,0">
            <GradientStop Offset="0.1" Color="#FF5B66" />
            <GradientStop Offset="1.0" Color="#DC2D41" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <Grid>
        <Image
            Margin="0,40,20,0"
            HorizontalOptions="End"
            Source="logo"
            VerticalOptions="Start" />
        <Image Source="manwithfootball" />
        <Button
            x:Name="GetStartedButton"
            Margin="40,0,20,60"
            Background="#FFECEA"
            Clicked="GetStartedButton_Clicked"
            CornerRadius="12"
            FontAttributes="Bold"
            HorizontalOptions="Start"
            Shadow="{StaticResource MainShadow}"
            Text="Get Started"
            TextColor="#140504"
            VerticalOptions="End" />


    </Grid>
</ContentPage>